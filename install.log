# Instructions for installing required dependencies and running the app
sudo apt-get update -y && sudo apt-get install -y \
    r-base-core \
    r-cran-littler \
    gdebi
sudo su - -c "R -e \"install.packages('shiny', repos='https://cran.rstudio.com/')\""
wget https://download3.rstudio.org/ubuntu-12.04/x86_64/shiny-server-1.5.3.838-amd64.deb
sudo gdebi --non-interactive shiny-server-1.5.3.838-amd64.deb
git clone https://github.com/DColquhoun/FPR_calc.git
sudo cp FPR_calc/app.R /srv/shiny-server/
